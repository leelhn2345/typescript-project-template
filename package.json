{
  "name": "typescript-project-template",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node --transpile-only src/index.ts",
    "dev": "env-cmd -f .env ts-node-dev --inspect --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts --fix",
    "prepare": "is-ci || husky install",
    "prettier": "prettier '**/*.{json,yml,yaml,ts,tsx}' --write"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^5.0.3",
    "ts-node": "^10.9.1",
    "@types/node": "^18.15.11"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "ts-node-dev": "^2.0.0"
  },
  "lint-staged": {
    "**/*.(json,yml,yaml,ts,tsx}": "prettier --write",
    "*.{ts,tsx}": [
      "npm run lint"
    ]
  }
}
